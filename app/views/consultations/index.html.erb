<h1>Listing consultations</h1>

<table>
  <tr>
    <th>Provider</th>
    <th>Total price</th>
    <th>Pay price</th>
    <th>Bond</th>
    <th>Address</th>
    <th>Phone</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @consultations.each do |consultation| %>
  <tr>
    <td><%= consultation.provider %></td>
    <td><%= consultation.total_price %></td>
    <td><%= consultation.pay_price %></td>
    <td><%= consultation.bond %></td>
    <td><%= consultation.address %></td>
    <td><%= consultation.phone %></td>
    <td><%= link_to 'Show', consultation %></td>
    <td><%= link_to 'Edit', edit_consultation_path(consultation) %></td>
    <td><%= link_to 'Destroy', consultation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

