<%= simple_form_for @consultation, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :provider %>
  <%= f.input :total_price %>
  <%= f.input :pay_price %>
  <%= f.input :bond %>
  <%= f.input :address %>
  <%= f.input :phone %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                consultation_path, :class => 'btn' %>
  </div>
<% end %>
