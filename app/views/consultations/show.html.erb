
<div class="container">
<%- model_class = Consultation -%>
<div class="page-header">
  <h2>Consulta</h2>
</div>
</div>

<div class="row-fluid">
  <div class="picture span2 offset1 ">
     

     <%= image_tag(@consultation.logo_url, :width =>600 ) if @consultation.logo.present? %>
   </div> 
   <div class="main_info span6">
      
      <table class="table table-bordered ">  
                        <tbody>
                        <tr>
                          <td><i class="icon-user-md icon-2x"></i></td>
                          <td> Proveedor de la consulta</td>
                          <td><%= @consultation.provider %></td>
                        </tr> 
                        <tr>
                          <td><i class="icon-money icon-2x"></i></td>
                          <td> Precio Total </td>
                          <td><%= @consultation.total_price %></p></td>
                        </tr>
                        <tr>  
                          <td><i class="icon-money icon-2x"></i></td>
                          <td> Precio de la consulta </td>
                          <td><%= @consultation.pay_price %></p></td>
                        </tr>
                        <tr>
                          <td><i class="icon-calendar icon-2x"></i></td>
                          <td>Bono Consulta</td>
                          <td><%= @consultation.bond %></td>
                        </tr> 
                        <tr>
                          <td><i class="icon-hospital icon-2x"></i></td>
                          <td>Direcci√≥n</td>
                          <td><%= @consultation.address %></td>
                        </tr>
                        <tr>   
                          <td><i class="icon-phone icon-2x"></i></td>
                          <td>Telefono</td>
                          <td><%= @consultation.phone %></td>
                        </tr>
                        <tr>
                          <td><i class="icon-phone icon-2x"></i></td>
                          <td>Telefono</td>
                          <td><% @consultation.consultation_types.each do |consultation_type| %>
                          <h4><%= consultation_type.name %></h4></td>
                     <% end %>
                   </tr>

                    

                       </tbody>              
                    </table> 

                     <% @consultation.consultation_types.each do |consultation_type| %>
                     <h4><%= consultation_type.name %></h4>
                     <% end %>

                      <p><a class="btn btn-primary btn-large" href="#">Contrata &raquo;</a></p>
                  </div>
                </div>
  

<% if can? :update, @consultation %>
<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              consultations_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_consultation_path(@consultation), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              consultation_path(@consultation),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
<% end %>